<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/home.css" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script
      src="https://kit.fontawesome.com/b16d3c3182.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <h1 id="heading">
      <i class="fa-solid fa-address-book"></i> &nbsp Contact list
    </h1>
    <div class="contact-container">
      <div>
        <ul>
          <% for(let i of contact_list) { %>
          <li class="contact">
            <div class="name-phone"><span><%= i.name %></span> <span> <%= i.phone %></span></div>
            <div class="delete"><a href="/delete-contact/?id=<%= i._id %>"><i class="fa-solid fa-trash"></i></a></div>
          </li>
          <% } %>
        </ul>
      </div>
      <form action="/create-contact" method="post">
        <input type="text" name="name" placeholder="Enter Name" required />
        <input type="number" name="phone" placeholder="Enter Phone" required />
        <input class="submit" type="submit" value="Add" />
      </form>
    </div>
  </body>
  <script src="/js/home.js"></script>
</html>
